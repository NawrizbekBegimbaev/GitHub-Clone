<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHub" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MySearchViewTheme" parent="Theme.AppCompat.Light">
        <!-- Customize the color of the search icon -->
        <item name="colorControlNormal">#000000</item>
        <!-- Customize the color of the text in the search view -->
        <item name="android:textColor">#000000</item>
        <!-- Customize the color of the hint text in the search view -->
        <item name="android:textColorHint">#000000</item>
        <!-- Customize the background color of the search view -->
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:hint">#FFFFFF</item>
        <item name="android:iconifiedByDefault">false</item>
    </style>
</resources>